<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RouteCompleteSheet">

    <TextView
        android:id="@+id/routeCompleteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Route Complete"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        style="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:id="@+id/routeCompleteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="You have reached your destination" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/butmessageContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Message Contacts"/>

</LinearLayout>